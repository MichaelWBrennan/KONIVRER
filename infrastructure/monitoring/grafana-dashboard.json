{
  "dashboard": {
    "id": null,
    "title": "KONIVRER Self-Healing & Security Dashboard",
    "tags": ["konivrer", "self-healing", "security", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Health Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=~\"self-healing-system|security-system|konivrer-app\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "green", "value": 1 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "Self-Healing Metrics",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(self_healing_operations_total[5m])",
            "legendFormat": "Operations/sec"
          },
          {
            "expr": "rate(self_healing_successes_total[5m])",
            "legendFormat": "Successes/sec"
          },
          {
            "expr": "rate(self_healing_failures_total[5m])",
            "legendFormat": "Failures/sec"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
      },
      {
        "id": 3,
        "title": "Security Scan Results",
        "type": "timeseries",
        "targets": [
          {
            "expr": "security_vulnerabilities_total{severity=\"critical\"}",
            "legendFormat": "Critical"
          },
          {
            "expr": "security_vulnerabilities_total{severity=\"high\"}",
            "legendFormat": "High"
          },
          {
            "expr": "security_vulnerabilities_total{severity=\"medium\"}",
            "legendFormat": "Medium"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
      },
      {
        "id": 4,
        "title": "Circuit Breaker Status",
        "type": "stat",
        "targets": [
          {
            "expr": "circuit_breaker_status",
            "legendFormat": "{{service}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "red", "value": 1 }
              ]
            },
            "mappings": [
              { "options": { "0": { "text": "CLOSED" } }, "type": "value" },
              { "options": { "1": { "text": "OPEN" } }, "type": "value" }
            ]
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
      },
      {
        "id": 5,
        "title": "Chaos Engineering Results",
        "type": "timeseries",
        "targets": [
          {
            "expr": "chaos_test_successes_total",
            "legendFormat": "Successful Tests"
          },
          {
            "expr": "chaos_test_failures_total",
            "legendFormat": "Failed Tests"
          },
          {
            "expr": "chaos_test_recovery_time_seconds",
            "legendFormat": "Recovery Time"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 }
      },
      {
        "id": 6,
        "title": "Application Performance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "Requests/sec"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th Percentile Response Time"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 }
      },
      {
        "id": 7,
        "title": "Resource Utilization",
        "type": "timeseries",
        "targets": [
          {
            "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU Usage %"
          },
          {
            "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
            "legendFormat": "Memory Usage %"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 }
      },
      {
        "id": 8,
        "title": "SBOM Coverage",
        "type": "gauge",
        "targets": [
          {
            "expr": "sbom_coverage_percentage",
            "legendFormat": "Coverage"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "yellow", "value": 80 },
                { "color": "green", "value": 95 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 12, "y": 24 }
      },
      {
        "id": 9,
        "title": "Dependency Vulnerabilities",
        "type": "piechart",
        "targets": [
          {
            "expr": "dependency_vulnerabilities_total",
            "legendFormat": "{{severity}}"
          }
        ],
        "gridPos": { "h": 8, "w": 6, "x": 18, "y": 24 }
      },
      {
        "id": 10,
        "title": "Security Compliance Score",
        "type": "gauge",
        "targets": [
          {
            "expr": "security_compliance_score",
            "legendFormat": "Score"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "orange", "value": 60 },
                { "color": "yellow", "value": 80 },
                { "color": "green", "value": 90 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 32 }
      },
      {
        "id": 11,
        "title": "Self-Healing Recovery Time",
        "type": "histogram",
        "targets": [
          {
            "expr": "rate(self_healing_recovery_duration_seconds_bucket[5m])",
            "legendFormat": "Recovery Time Distribution"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 6, "y": 32 }
      },
      {
        "id": 12,
        "title": "Alert Summary",
        "type": "table",
        "targets": [
          {
            "expr": "ALERTS",
            "legendFormat": "{{alertname}}"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true,
                "alertname": true
              },
              "renameByName": {
                "severity": "Severity",
                "service": "Service",
                "instance": "Instance"
              }
            }
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 18, "y": 32 }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "5s",
        "10s",
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h",
        "2h",
        "1d"
      ]
    },
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "query": "label_values(up, job)",
          "refresh": 2,
          "includeAll": true,
          "multi": true
        },
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(up{job=~\"$service\"}, instance)",
          "refresh": 2,
          "includeAll": true,
          "multi": true
        },
        {
          "name": "severity",
          "type": "custom",
          "query": "critical,high,medium,low",
          "options": [
            { "text": "Critical", "value": "critical" },
            { "text": "High", "value": "high" },
            { "text": "Medium", "value": "medium" },
            { "text": "Low", "value": "low" }
          ],
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "prometheus",
          "expr": "changes(app_version[1m]) > 0",
          "iconColor": "blue",
          "titleFormat": "Deployment",
          "textFormat": "Version: {{app_version}}"
        },
        {
          "name": "Security Scans",
          "datasource": "prometheus",
          "expr": "security_scan_completed",
          "iconColor": "green",
          "titleFormat": "Security Scan",
          "textFormat": "Scan completed at {{scan_timestamp}}"
        }
      ]
    },
    "refresh": "30s",
    "schemaVersion": 30,
    "version": 1,
    "links": [
      {
        "title": "Prometheus",
        "url": "http://localhost:9090",
        "targetBlank": true
      },
      {
        "title": "AlertManager",
        "url": "http://localhost:9093",
        "targetBlank": true
      },
      {
        "title": "Grafana",
        "url": "http://localhost:3000",
        "targetBlank": true
      }
    ]
  }
}
