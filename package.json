{
  "name": "konivrer-deck-database",
  "version": "1.0.0",
  "description": "Professional deck building and card database for KONIVRER trading card game",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 12000",
    "build": "vite build",
    "preview": "vite preview --host 0.0.0.0 --port 12001",
    "start": "vite --host 0.0.0.0 --port 12000",
    "lint": "eslint . --ext js,jsx,ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,jsx,ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "clean": "rm -rf dist coverage",
    "build:analyze": "vite build --mode analyze",
    "build:stats": "vite-bundle-analyzer dist/stats.html",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "validate": "npm run type-check && npm run lint && npm run test:run",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "quality:check": "./scripts/quality-check.sh",
    "quality:full": "npm run validate && npm run quality:check",
    "deps:check": "npx npm-check-updates",
    "deps:update": "npx npm-check-updates -u && npm install",
    "postinstall": "node -e \"try { require('fs').unlinkSync('node_modules/.bin/node-sass'); } catch(e) {} try { require('fs').rmSync('node_modules/node-sass', {recursive: true, force: true}); } catch(e) {}\""
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "overrides": {
    "node-sass": "sass"
  },
  "resolutions": {
    "node-sass": "sass",
    "ws": "^8.17.1",
    "tar-fs": "^2.1.2",
    "esbuild": "^0.25.0",
    "cookie": "^0.7.0"
  },
  "keywords": [
    "konivrer",
    "deck-builder",
    "card-game",
    "database",
    "react",
    "vite"
  ],
  "author": "KONIVRER Team",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@eslint/js": "^9.27.0",
    "@lhci/cli": "^0.12.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.1.4",
    "@vitest/ui": "^3.1.4",
    "audit-ci": "^7.0.1",
    "autoprefixer": "^10.4.21",
    "cookie": "^0.7.0",
    "esbuild": "^0.25.0",
    "eslint": "^9.27.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.0",
    "npm-check-updates": "^16.14.15",
    "prettier": "^3.5.3",
    "rollup-plugin-visualizer": "^6.0.1",
    "sass": "^1.89.0",
    "tar-fs": "^2.1.2",
    "terser": "^5.40.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-bundle-analyzer": "^0.7.0",
    "vitest": "^3.1.4",
    "ws": "^8.17.1"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "axios": "^1.6.2",
    "clsx": "^2.0.0",
    "framer-motion": "^12.15.0",
    "lucide-react": "^0.511.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.48.2",
    "react-router-dom": "^7.6.1"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
