{
  "name": "konivrer-deck-database",
  "version": "1.0.0",
  "description": "KONIVRER Azoth TCG - Card game simulator and deck database with unified interface",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:host": "vite --host",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "start": "vite preview --port $PORT",
    "preview": "vite preview",
    "test": "echo 'No tests configured' && exit 0",
    "test:run": "echo 'No tests configured' && exit 0",
    "test:coverage": "echo '{}' > coverage.json && exit 0",
    "build:analyze": "vite build --mode analyze",
    "bundle:analyze": "npm run build:analyze",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:all": "rm -rf dist node_modules/.vite .turbo",
    "dev:full": "npm run dev"
  },
  "dependencies": {
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.3.0",
    "@tanstack/react-query": "^5.89.0",
    "@tanstack/react-query-devtools": "^5.89.0",
    "axios": "^1.12.2",
    "lucide-react": "^0.544.0",
    "pdfjs-dist": "^5.4.149",
    "react": "^19.1.1",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.1",
    "socket.io-client": "^4.8.1",
    "three": "^0.180.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vanilla-extract/css": "^1.17.4",
    "@vanilla-extract/vite-plugin": "^5.1.1",
    "@vitejs/plugin-react": "^5.0.3",
    "concurrently": "^8.2.2",
    "terser": "^5.44.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.3",
    "vite": "^7.1.6"
  },
  "overrides": {
    "simple-swizzle": "0.2.2"
  }
}
