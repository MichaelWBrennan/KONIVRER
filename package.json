{
  "name": "konivrer-deck-database",
  "version": "1.0.0",
  "description": "Professional deck building and card database for KONIVRER trading card game",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 12000",
    "build": "vite build",
    "build:versioned": "node scripts/build-with-version.js",
    "preview": "vite preview --host 0.0.0.0 --port 12001",
    "start": "vite --host 0.0.0.0 --port 12000",
    "lint": "eslint . --ext js,jsx,ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,jsx,ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "clean": "rm -rf dist coverage",
    "build:analyze": "vite build --mode analyze",
    "build:stats": "vite-bundle-analyzer dist/stats.html",
    "analyze:bundle": "node scripts/analyze-bundle.js",
    "perf:audit": "npx lhci autorun",
    "perf:build": "npm run build && npm run analyze:bundle",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "validate": "npm run type-check && npm run lint && npm run test:run",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "security:check": "node scripts/security-check.js",
    "security:scan": "npm audit && npm run security:check",
    "quality:check": "./scripts/quality-check.sh",
    "quality:full": "npm run validate && npm run quality:check",
    "deps:check": "npx npm-check-updates",
    "analytics:verify": "node scripts/verify-analytics.js",
    "deps:update": "npx npm-check-updates -u && npm install",
    "postinstall": "node -e \"try { require('fs').unlinkSync('node_modules/.bin/node-sass'); } catch(e) {} try { require('fs').rmSync('node_modules/node-sass', {recursive: true, force: true}); } catch(e) {}\""
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "overrides": {
    "node-sass": "sass",
    "cookie": "^0.7.2",
    "tar-fs": "^3.0.9",
    "ws": "^8.18.2",
    "rimraf": "^6.0.1",
    "glob": "^11.0.0",
    "inflight": "^1.0.6",
    "@sentry/node": "^8.0.0",
    "lighthouse": "^12.6.1"
  },
  "keywords": [
    "konivrer",
    "deck-builder",
    "card-game",
    "database",
    "react",
    "vite"
  ],
  "author": "KONIVRER Team",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.28.0",
    "@lhci/cli": "^0.15.0",
    "@rollup/rollup-linux-x64-gnu": "^4.42.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.0.0",
    "@types/react": "^19.1.7",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/coverage-v8": "^3.2.3",
    "@vitest/ui": "^3.2.3",
    "audit-ci": "^7.1.0",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.0.7",
    "cssnano-preset-advanced": "^7.0.7",
    "esbuild": "^0.25.5",
    "eslint": "^9.28.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.6.1",
    "lint-staged": "^16.1.0",
    "npm-check-updates": "^18.0.1",
    "prettier": "^3.5.3",
    "rollup-plugin-visualizer": "^6.0.3",
    "sass": "^1.89.2",
    "tar-fs": "^3.0.9",
    "terser": "^5.42.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-bundle-analyzer": "^0.22.2",
    "vitest": "^3.2.3",
    "ws": "^8.18.2"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "axios": "^1.9.0",
    "framer-motion": "^12.16.0",
    "lucide-react": "^0.513.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.57.0",
    "react-router-dom": "^7.6.2",
    "zod": "^3.25.57"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
