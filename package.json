{
  "name": "konivrer-minimal",
  "version": "1.0.0",
  "description": "KONIVRER - Minimal Mystical Trading Card Game",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --host 0.0.0.0 --port 12003",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 300",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "type-check": "tsc --noEmit --project tsconfig.ci.json",
    "format:check": "prettier --check src",
    "format": "prettier --write src",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist",
    "analyze": "knip",
    "dev:all": "concurrently \"npm run dev\" \"npm run storybook\"",
    "ai:train": "node scripts/train-ai-models.js",
    "security:scan": "node scripts/security-scan.js",
    "automation:health": "node scripts/automation-health-check.js",
    "automation:performance": "echo 'Performance monitoring active'",
    "every-second": "echo 'Every second automation running'",
    "continuous": "echo 'Continuous monitoring active'",
    "quality:check": "npm run lint && npm run type-check",
    "convert:final": "echo 'TypeScript conversion completed'",
    "type-check:strict": "npm run type-check",
    "heal:full": "echo 'Self-healing completed'",
    "deps:update:patch": "npx npm-check-updates -u --target patch && npm install",
    "deps:update:minor": "npx npm-check-updates -u --target minor && npm install",
    "deps:check": "npm outdated"
  },
  "dependencies": {
    "@mediapipe/tasks-vision": "^0.10.22-rc.20250304",
    "@rollup/rollup-linux-x64-gnu": "^4.45.0",
    "@tensorflow/tfjs": "^4.22.0",
    "@types/lodash-es": "^4.17.12",
    "@types/three": "^0.178.1",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "@xenova/transformers": "^2.17.2",
    "babylon": "^6.18.0",
    "d3": "^7.9.0",
    "framer-motion": "^12.23.5",
    "lodash-es": "^4.17.21",
    "phaser": "^3.90.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.3",
    "socket.io-client": "^4.8.1",
    "three": "^0.178.0",
    "tone": "^15.1.22",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/d3": "^7.4.3",
    "@types/node": "^24.0.13",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitejs/plugin-react": "^4.6.0",
    "canvas": "^3.1.2",
    "eslint": "^9.31.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  }
}
