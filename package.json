    "db:populate-from-images": "ts-node --project backend/tsconfig.json scripts/populate-db-from-images.ts",
    "build:ts": "ts-node scripts/ts/build.ts",
    "docker:continuous": "ts-node scripts/ts/start-continuous-docker.ts",
    "branches:cleanup": "ts-node scripts/ts/cleanup-closed-branches.ts",
    "service:install": "ts-node scripts/ts/install-continuous-service.ts",
    "deploy:infra": "ts-node scripts/ts/deploy.ts"
  },
  "dependencies": {
    "@eslint/js": "^9.34.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
