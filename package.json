{
  "name": "konivrer-deck-database",
  "version": "1.0.0",
  "description": "KONIVRER Azoth TCG - Card game simulator and deck database with unified interface",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:host": "vite --host",
    "build": "tsc --noEmit && vite build",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "start": "vite preview --port $PORT",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "lint:check": "eslint src --ext .ts,.tsx --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:staged": "prettier --write --ignore-unknown",
    "test": "echo 'No tests configured' && exit 0",
    "test:run": "echo 'No tests configured' && exit 0",
    "test:coverage": "echo '{}' > coverage.json && exit 0",
    "build:analyze": "vite build --mode analyze",
    "bundle:analyze": "npm run build:analyze",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:all": "rm -rf dist node_modules/.vite .turbo",
    "check": "npm run type-check && npm run lint:check && npm run format:check",
    "check:fix": "npm run lint:fix && npm run format",
    "pre-commit": "npm run check:fix",
    "prepare": "npm run check",
    "dev:full": "concurrently \"npm run dev\" \"npm run type-check:watch\"",
    "automation:report": "tsx automation/cli.ts report --output automation-report.html"
  },
  "dependencies": {
    "@eslint/js": "^9.36.0",
    "@tanstack/react-query": "^5.89.0",
    "@tanstack/react-query-devtools": "^5.89.0",
    "axios": "^1.12.2",
    "lucide-react": "^0.544.0",
    "pdfjs-dist": "^5.4.149",
    "react": "^19.1.1",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.1",
    "socket.io-client": "^4.8.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/react": "^19.1.15",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vanilla-extract/css": "^1.17.4",
    "@vanilla-extract/vite-plugin": "^5.1.1",
    "@vitejs/plugin-react": "^5.0.3",
    "concurrently": "^8.2.2",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.6"
  },
  "overrides": {
    "simple-swizzle": "0.2.2"
  }
}
