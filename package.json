    "@tanstack/react-query": "^5.85.5",
    "@tanstack/react-query-devtools": "^5.85.5",
    "@types/react-router-dom": "^5.3.3",
    "@xata.io/client": "^0.30.1",
    "axios": "^1.11.0",
    "lucide-react": "^0.541.0",
    "pdfjs-dist": "^5.4.54",
    "react": "^19.1.1",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^19.1.1",
    "react-qr-code": "^2.0.18",
