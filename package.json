{
  "name": "konivrer-minimal",
  "version": "1.0.0",
  "description": "KONIVRER - Minimal Mystical Trading Card Game",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 12000",
    "build": "vite build",
    "preview": "vite preview --host 0.0.0.0 --port 12003",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "analyze": "knip",
    "dev:all": "concurrently \"npm run dev\" \"npm run storybook\"",
    "ai:train": "node scripts/train-ai-models.js",
    "security:scan": "node scripts/security-scan.js",
    "automation:health": "node scripts/automation-health-check.js",
    "deps:update:patch": "npx npm-check-updates -u --target patch && npm install",
    "deps:update:minor": "npx npm-check-updates -u --target minor && npm install",
    "deps:check": "npm outdated"
  },
  "dependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.44.2",
    "@types/lodash-es": "^4.17.12",
    "@vercel/analytics": "^1.3.1",
    "@vercel/speed-insights": "^1.0.12",
    "framer-motion": "^11.11.17",
    "lodash-es": "^4.17.21",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "zustand": "^4.4.7",
    "@tensorflow/tfjs": "^4.15.0",
    "three": "^0.159.0",
    "@types/three": "^0.159.0",
    "tone": "^14.7.77",
    "socket.io-client": "^4.7.4",
    "d3": "^7.8.5",
    "babylon": "^6.0.0",
    "phaser": "^3.70.0",
    "@mediapipe/tasks-vision": "^0.10.8",
    "@xenova/transformers": "^2.6.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.12",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "typescript": "^5.0.2",
    "vite": "^7.0.3",
    "vitest": "^3.2.4",
    "@types/d3": "^7.4.3"
  }
}
