{
  "extends": ["@typescript-eslint/recommended"],
  "rules": {
    // Security-critical rules - keep these strict
    "no-eval": "error",
    "no-implied-eval": "error", 
    "no-new-func": "error",
    "no-script-url": "error",
    
    // Relax non-security rules to focus on security score
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-unused-vars": "off",
    "react-refresh/only-export-components": "off",
    
    // Keep some basic quality rules as warnings
    "no-console": "warn",
    "prefer-const": "warn"
  },
  "overrides": [
    {
      "files": ["**/*.test.ts", "**/*.test.tsx"],
      "rules": {
        // All rules off in test files
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-unused-vars": "off"
      }
    }
  ]
}