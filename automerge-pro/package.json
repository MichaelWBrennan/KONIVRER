{
  "name": "automerge-pro",
  "version": "1.0.0",
  "description": "Enterprise-grade GitHub App for automated pull request management with marketplace billing",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:dev": "ts-node src/index.ts",
    "dev": "tsx watch src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts --config .eslintrc.json --fix",
    "deploy:dev": "sam deploy --config-env dev",
    "deploy:prod": "sam deploy --config-env prod",
    "deploy": "sam build && sam deploy",
    "local": "sam local start-api",
    "package": "sam build"
  },
  "keywords": [
    "github-app",
    "automerge",
    "pull-request",
    "automation",
    "enterprise",
    "marketplace"
  ],
  "author": "Automerge-Pro Team",
  "license": "MIT",
  "dependencies": {
    "@vendia/serverless-express": "^4.12.6",
    "@octokit/webhooks": "^13.3.0",
    "@octokit/app": "^15.1.0",
    "@octokit/rest": "^21.0.2",
    "express": "^4.21.2",
    "joi": "^17.13.3",
    "yaml": "^2.7.0",
    "js-yaml": "^4.1.0",
    "aws-sdk": "^2.1691.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "commander": "^12.1.0",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.17.10",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.7.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}