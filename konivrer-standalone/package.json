{
  "name": "konivrer-physical-matchmaking",
  "version": "1.0.0",
  "description": "Physical matchmaking component for KONIVRER deck database with ancient theme and Bayesian rating system",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 12000",
    "build": "vite build --emptyOutDir",
    "preview": "vite preview --host 0.0.0.0 --port 12000",
    "start": "vite --host 0.0.0.0 --port 12000",
    "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "analyze": "vite build --mode analyze",
    "serve": "vite preview --host 0.0.0.0 --port 12000"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "qrcode.react": "^3.1.0",
    "web-vitals": "^3.5.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "vite": "^5.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
