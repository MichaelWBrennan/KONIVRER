{
  "name": "konivrer-physical-matchmaking",
  "version": "1.1.0",
  "description": "Advanced TCG platform with physical matchmaking, AI card verification, blockchain integration, ML deck analysis, and AR card viewing",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 12000",
    "build": "vite build --emptyOutDir",
    "preview": "vite preview --host 0.0.0.0 --port 12000",
    "start": "vite --host 0.0.0.0 --port 12000",
    "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "analyze": "vite build --mode analyze",
    "serve": "vite preview --host 0.0.0.0 --port 12000"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "qrcode.react": "^3.1.0",
    "web-vitals": "^3.5.0",
    "@tensorflow/tfjs": "^4.15.0",
    "ethers": "^6.9.0",
    "chart.js": "^4.4.1",
    "react-chartjs-2": "^5.2.0",
    "three": "^0.159.0",
    "react-three-fiber": "^6.0.13"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^0.17.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
